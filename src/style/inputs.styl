@require "../../style/variables"

.input
  padding: 4px 8px;
  font-size: 1em;
  line-height: 1em;
  border: 1px solid darken(#f3efee, 25%);
  background: #f3efee;
  border-radius: 4px;
  outline: 0;
  box-shadow: inset 0 4px 4px rgba(0, 0, 0, 0.05);

  &:focus
    border: 1px solid darken(#f3efee, 50%);

.button {
  background: accent-color;
  border: none;
  border-radius: 4px;
  padding: 4px 8px;
  outline: 0;
  color: #fff;
  text-align: center;

  &:hover {
    background: darken(accent-color, 10%);
    cursor: pointer;
    color: #fff;
    text-decoration: none;
  }
}