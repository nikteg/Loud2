@require "../../style/variables"

.input
  padding: 4px 8px;
  font-size: 1em;
  border: 1px solid #000;
  border-radius: 4px;
  outline: 0;

  &:focus
    border: 1px solid accent-color;

.button
  background: accent-color;
  border: none;
  border-radius: 4px;
  text-transform: uppercase;
  padding: 4px 8px;
  outline: 0;
  color: #fff;
