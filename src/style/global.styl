@require "variables"

html, body, #app
  height: 100%;

body
  font: 14px/1.5em sans-serif;
  // background-image: radial-gradient(circle at top center, #e81a7b, accent-color);
  background: gray-lighter-color;
  box-sizing: border-box;
  color: #333;

a
  color: inherit;
  text-decoration: none;
  cursor: pointer;

  &:hover
    color: accent-color;
    text-decoration: underline;
    cursor: pointer;

.none
  display: none;

.hidden
  visibility: hidden;

.header-title
  margin: 8px 8px 16px;
  font-size: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;

  .num-tracks
    font-size: 0.5em;
    color: #c5c1c0;

  a
    color: inherit;
    text-decoration: none;

.content
  padding: 16px;

.page
  padding: 8px;

.rc-slider
  position: relative;
  cursor: pointer;
  background: player-progress-background-color;
  border-radius: 2px;

  .rc-slider-track
    border-radius: 2px;
    background: accent-color;
    height: 100%;
    width: 100%;

  .rc-slider-handle
    position: absolute;
    border-radius: 50%;
    width: 12px;
    height: 12px;
    background: accent-color;
    border: none;
