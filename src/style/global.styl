html, body, #app
  height: 100%;

body
  font: 14px/1.5em sans-serif;
  background-image: radial-gradient(circle at top center, #e81a7b, #f06d06);
  padding: 8px;
  box-sizing: border-box;
  color: white;

a
  text-decoration: underline;
  cursor: pointer;

.App
  height: 100%;

  .App-wrapper
    width: 100%;
    height: 100%;
    display: flex;
    padding-bottom: 72px;
    box-sizing: border-box;

    .App-wrapper-content
      flex: 1;
      overflow: auto;

.Preview, .List, .Welcome
  background: black;
  padding: 8px;

.List

  ul
    list-style: none;
    padding: 0;
    margin: 0;

    .ListItem
      color: white;
      padding: 8px;
      display: flex;
      align-items: center;

      .ListItem-button
        display: block;
        width: 32px;
        height: 32px;
        margin-right: 8px;
        border: none;
        background: #f06d06;
        border-radius: 50%;
        padding: 8px;
        cursor: pointer;
        fill: white;
        outline: none;

      .ListItem-title
        flex: 1;
        color: white;
        text-decoration: none;