@require "../../style/variables"

.List
  > ul
    list-style: none;
    padding: 8px;
    margin: 0;

.ListItem
  padding: 8px 4px;
  display: flex;
  align-items: center;
  border-radius: 4px;
  border-bottom: 1px solid #e8e4e3;

  &:first-child
    border-top: 1px solid #e8e4e3;

  &.active
    background: gray-light-color;
    font-weight: bold;

  .loading
    flex: 1;
    background: gray-light-color;
    height: 1rem;

  a
    color: inherit;

.ListItem-button
  display: block;
  width: 24px;
  height: 24px;
  margin-right: 8px;
  border: none;
  background: accent-color;
  border-radius: 50%;
  padding: 4px;
  cursor: pointer;
  fill: white;
  outline: none;

.ListItem-title
  flex: 1;
  text-decoration: none;