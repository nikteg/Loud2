@require "../../style/variables"

.Sidebar
  background: #eee;
  width: 256px;

  .Sidebar-subtitle
    padding: 8px;
    text-transform: uppercase;
    font-weight: bold;

  ul
    list-style: none;
    padding: 0;
    margin: 0;

    .Sidebar-item
      display: block;
      padding: 4px 16px;

      &.active
        font-weight: bold;
        background: #fff;
        color: accent-color;

      a
        color: inherit;
        display: block;
        text-decoration: none;