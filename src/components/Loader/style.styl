@require "../../style/variables"

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.Loader
  border-radius: 50%;
  width: 40px;
  height: 40px;
  border: .25rem solid lighten(#323030, 5%);
  border-top-color: #8a8887;
  animation: spin 1s infinite;