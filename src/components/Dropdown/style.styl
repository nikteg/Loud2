@require "../../style/variables"

.Dropdown
  position: relative;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  margin: 0 4px;
  box-sizing: border-box;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;

  &.active
    background: #000;
    fill: #fff;
    color: #fff;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);

  .Dropdown-button
    width: 1em;
    height: 1em;
    padding: 4px;

    &:hover
      fill: accent-color;

    .Icon
      vertical-align: top;

  ul
    background: #000;
    position: absolute;
    z-index: 10;
    top: 22px;
    right: 0;
    padding: 8px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
    list-style: none;

    li
      white-space: nowrap;

      &.seperator
        background: black-color;
        height: 1px;
        margin: 4px;

      a
        display: block;
        padding: 2px 8px;
        text-decoration: none;

        &:hover
          color: accent-color;