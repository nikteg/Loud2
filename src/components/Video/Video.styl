@require "../../style/variables"

.Video
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: #000;

  .Video-content
    position: absolute;
    top: 32px;
    bottom: 32px + 72px;
    right: 32px;
    left: 32px;
    box-shadow: 0 0 16px rgba(0, 0, 0 0.75);

    iframe
      width: 100%;
      height: 100%;