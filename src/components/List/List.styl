@require "../../style/variables"

.List

  ul
    list-style: none;
    padding: 8px;
    margin: 0;

    .ListItem
      padding: 8px;
      display: flex;
      align-items: center;

      &.active
        font-weight: bold;

      .ListItem-button
        display: block;
        width: 32px;
        height: 32px;
        margin-right: 8px;
        border: none;
        background: accent-color;
        border-radius: 50%;
        padding: 8px;
        cursor: pointer;
        fill: white;
        outline: none;

      .ListItem-title
        flex: 1;
        text-decoration: none;